---
const { categories } = Astro.props;
import { Image, Picture } from "astro:assets";
---

<style>
    ul {
        display: grid;
        grid-template-columns: 1fr 1fr;
        font-size: 2rem;
    }

    ul > li:nth-child(2),
    ul > li:nth-child(3),
    ul > li:nth-child(6),
    ul > li:nth-child(7),
    ul > li:nth-child(10),
    ul > li:nth-child(11) {
        background-color: rgb(218, 167, 59);
        color: rgb(244, 227, 207);
    }

    li {
        padding: 2rem;
        text-align: center;
    }

    .category_stickers {
        background-color: rgb(218, 168, 59);
        color: #f4e3cf;
        font-size: 1rem;
        width: fit-content;
        padding: 1rem;
        border-radius: 2rem;
        margin-block-start: 2rem;
        border: 0.1rem solid rgb(244, 227, 207);
    }

    .div_category_stickers {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        justify-content: center;
    }
</style>
<ul>
    {
        categories.map((category) => (
            <li data-category={category.slug}>
                <a href={`/categories/${category.slug}`}>
                    <p>{category.name}</p>
                </a>
                <div class="div_category_stickers">
                    {category.stickers.map((sticker) => (
                        <a href={`/stickers/${sticker.slug}`}>
                            {" "}
                            <p class="category_stickers">{sticker.name}</p>
                        </a>
                    ))}
                </div>
            </li>
        ))
    }
</ul>
