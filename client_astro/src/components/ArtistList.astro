---
const { artists } = Astro.props;
import { Image, Picture } from "astro:assets";
---

<style>
    .artist_list {
        display: grid;
        font-size: 2rem;
    }

    .artist_boxes {
        padding: 3rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
    .artist_categories {
        display: flex;
        flex-direction: row;
    }

    .artist_categories > li {
        padding-inline-start: 1rem;
    }

    a {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .categories,
    .artist_boxes:nth-child(even) {
        background-color: rgb(218, 167, 59);
        color: rgb(244, 227, 207);
        border: 0.1rem solid rgb(244, 227, 207);
    }

    .categories > span {
        margin-inline-end: 1rem;
    }

    .artist_boxes__left {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .profile-image {
        border-radius: 50%;
        inline-size: 7rem;
    }

    .categories {
        margin-block-start: 0rem;
    }
</style>

<ul class="artist_list">
    {
        artists.map((artist) => (
            <li
                class="artist_boxes"
                data-category={artist.categories?.map((c) => c.slug).join(" ")}
            >
                <a class="artist_boxes__left" href={`/artists/${artist.slug}`}>
                    <p>{artist.name}</p>
                    <Image
                        class="profile-image"
                        src={`${import.meta.env.STRAPI_URL}${artist.profile_photo.url}`}
                        alt="profile image"
                        width="300"
                        height="400"
                        widths={[250, 350, 500, 750]}
                        format="avif"
                        sizes="(min-width: 2960px) calc(12.5vw - 118px), (min-width: 2600px) calc(5vw + 121px), (min-width: 2240px) calc(5.29vw + 131px), (min-width: 1900px) calc(5vw + 157px), (min-width: 1540px) calc(4.71vw + 180px), (min-width: 1160px) calc(3.33vw + 217px), (min-width: 1120px) calc(325vw - 3455px), (min-width: 760px) calc(3.53vw + 229px), (min-width: 540px) calc(42vw - 43px), calc(8.18vw + 225px)"
                    />
                </a>

                {artist.categories && (
                    <ul class="artist_categories">
                        {artist.categories.map((category) => (
                            <li>
                                <a href={`/categories/${category.slug}`}>
                                    <p class="categories">
                                        {category.slug || "None"}
                                    </p>
                                </a>
                            </li>
                        ))}
                    </ul>
                )}
            </li>
        ))
    }
</ul>
