---
import Header from "../components/Header.astro";
import { Image, Picture } from "astro:assets";
import "../styles/reset.css";
import "../styles/global.css";
import fetchApi from "../lib/strapi.js";

const { pageTitle } = Astro.props;

const stickers = await fetchApi({
	endpoint: "stickers", // the content type to fetch
	wrappedByKey: "data", // the key to unwrap the response
	query: { populate: ["categories"] }, // Populate the categories
});
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Anton&family=Cinzel:wght@400..900&family=Fredoka:wght@300..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Reenie+Beanie&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Tiny5&display=swap"
			rel="stylesheet"
		/>

		<title>Once upon a sticker</title>
		<!-- Put then {pageTitle see what they did in astro id} -->
	</head>

	<body>
		<Header />
		<main>
			<ul class="sticker_grid">
				{
					stickers.map((sticker) => {
						// Get the first sentence of the description
						const firstPhrase =
							sticker.description[0]?.children[0]?.text.split(
								".",
							)[0] + ".";

						// Get the categories of the sticker
						const categories = sticker.categories
							?.map((category) => category.name)
							.join(", ");

						return (
							<li>
								<a href={`/stickers/${sticker.slug}`}>
									<strong>{sticker.name}</strong>
									<br />
									{firstPhrase}
									<br />
									<span class="categories">
										Categories: {categories || "None"}
									</span>
								</a>
							</li>
						);
					})
				}
			</ul>
		</main>
		<footer></footer>
		<script></script>
	</body>
</html>
